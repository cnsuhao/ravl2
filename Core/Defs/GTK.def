ifndef GTKDEF
GTKDEF = 1
################################################
# $Id$


ifeq ($(ARC),linux)
GLIBPATH = /usr
GTKPPATH = /usr
else
GLIBPATH = /opt/PDgtk/glib-1.2.7
GTKPPATH = /opt/PDgtk/gtk+-1.2.7
endif

#GTKCONFIG = $(GTKPPATH)/bin/gtk-config
GTKCONFIG = gtk-config

GTKCFLAGS = `$(GTKCONFIG) --cflags`
GTKLIBS =  `$(GTKCONFIG) --libs`

ifeq ($(ARC),sol2)
GTKLIBS += -R$(GTKPPATH)/lib -R$(GLIBPATH)/lib
endif

#ifeq ($(ARC),linux)
#GTKLIBS += -Wl,-rpath=$(GTKPPATH)/lib -Wl,-rpath=$(GLIBPATH)/lib
#endif

ifeq ($(ARC),sgi)
GTKLIBS += -Wl,-rpath,$(GTKPPATH)/lib,-rpath,$(GLIBPATH)/lib
endif

INCLUDES += $(GTKCFLAGS)
EXELIB := $(GTKLIBS) $(EXELIB)

endif
