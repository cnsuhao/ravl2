ifndef LIBPNG_DEF
LIBPNG_DEF = 1

include Math.def
include zlib.def

ifeq ($(ARC),linux)
EXELIB := -lpng $(EXELIB)
else
ifeq ($(ARC),sgi)
LIBPNG_HOME=/opt/freeware
INCLUDES += -I$(LIBPNG_HOME)/include 
EXELIB := -Wl,-rpath,$(LIBPNG_HOME)/lib32 -L$(LIBPNG_HOME)/lib32 -lpng -lz $(EXELIB)
else
ifeq ($(ARC),sol2)
LIBPNG_HOME=/opt/PDlibs
INCLUDES += -I$(LIBPNG_HOME)/include 
EXELIB := -L$(LIBPNG_HOME)/lib -lpng -lz $(EXELIB)
endif
endif
endif

endif
