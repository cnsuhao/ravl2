ifndef JAVASCRIPT_DEF
JAVASCRIPT_DEF=1
################################################
# $Id$

  ifndef JAVASCRIPT_HOME
    EXELIB := -lvrml97js  $(EXELIB)
  else 
    INCLUDES += -I$(JAVASCRIPT_HOME)/include

    ifeq ($(ARC),linux)
      EXELIB := -Wl,-rpath=$(JAVASCRIPT_HOME)/lib  $(EXELIB)
    else 
      EXELIB := -L$(JAVASCRIPT_HOME)/lib -lvrml97js  $(EXELIB)
    endif 
  endif
endif 
