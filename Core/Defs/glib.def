ifndef GLIBDEF
GLIBDEF = 1

include Math.def

#GLIBHOME = /opt/PDgtk
#INCLUDES += `$(GLIBHOME)/bin/glib-config --cflags`
#EXELIB := `$(GLIBHOME)/bin/glib-config --libs`  $(EXELIB)

# Check if we're using GTK2

ifneq ($(strip $(filter-out $(RESOURCES),libGTK2)),)

INCLUDES += `glib-config --cflags`
EXELIB := `glib-config --libs`  $(EXELIB)

else
INCLUDES +=  `pkg-config glib-2.0 --cflags` -DRAVL_USE_GTK2=1
EXELIB := `pkg-config glib-2.0 --libs`  $(EXELIB)
endif

endif
