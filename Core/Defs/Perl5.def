ifndef Perl5DEF
Perl5DEF = 1


ifeq ($(ARC),linux)
INCLUDES += -D_REENTRANT -D_GNU_SOURCE -DTHREADS_HAVE_PIDS -DDEBUGGING -fno-strict-aliasing -pipe -Wdeclaration-after-statement -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -I/usr/lib/perl5/5.8.8/i586-linux-thread-multi/CORE
EXELIB := -L/usr/lib/perl5/5.8.8/i586-linux-thread-multi/CORE -lperl $(EXELIB)
endif

ifeq ($(ARC),linux64)
#INCLUDES += -D_REENTRANT -D_GNU_SOURCE -DTHREADS_HAVE_PIDS -DDEBUGGING -fno-strict-aliasing -pipe -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64 -I/usr/lib64/perl5/5.8.8/x86_64-linux-thread-multi/CORE
INCLUDES += -I/usr/lib64/perl5/5.8.8/x86_64-linux-thread-multi/CORE
EXELIB := -L/usr/lib64/perl5/5.8.8/x86_64-linux-thread-multi/CORE -lperl $(EXELIB)
endif

endif
