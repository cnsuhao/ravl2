ifndef OPENGL_DEF
OPENGL_DEF = 1

include x11.def

ifndef MESAHOME
  MESAHOME=/opt/PDmesa/Mesa-3.2.1
endif

EXELIB := -L$(MESAHOME)/lib -lGL -lGLU $(EXELIB)
INCLUDES := -I$(MESAHOME)/include $(INCLUDES)

ifeq ($(ARC),linux)
EXELIB := -Wl,-rpath=$(MESAHOME)/lib -L$(MESAHOME)/lib $(EXELIB)
else
ifneq ($(ARC),sgi)
EXELIB := -R$(MESAHOME)/lib -L$(MESAHOME)/lib $(EXELIB)
else
EXELIB := -L$(MESAHOME)/lib $(EXELIB)
endif
endif

endif
