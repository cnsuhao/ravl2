ifndef LIBTIFF_DEF
LIBTIFF_DEF = 1

include Math.def
include zlib.def

ifndef LIBTIFF_HOME
  ifeq ($(ARC),linux)
#    LIBTIFF_HOME=
  else
    ifeq ($(ARC),sgi)
      LIBTIFF_HOME=/opt/freeware
    else
      LIBTIFF_HOME=/opt/PDlibs/tiff-v3.4beta037
    endif
  endif
endif

ifndef LIBTIFF_HOME
  EXELIB := -ltiff $(EXELIB)
else
  INCLUDES += -I$(LIBTIFF_HOME)/include 
  ifeq ($(ARC),sgi)
    EXELIB := -Wl,-rpath,$(LIBTIFF_HOME)/lib32 -L$(LIBTIFF_HOME)/lib32 -ltiff $(EXELIB)
  else
    EXELIB := -L$(LIBTIFF_HOME)/lib -ltiff $(EXELIB)
  endif
endif

endif
