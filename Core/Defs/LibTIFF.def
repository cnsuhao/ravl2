ifndef LIBTIFF_DEF
LIBTIFF_DEF = 1

include Math.def

ifeq ($(ARC),linux)
EXELIB := -ltiff $(EXELIB)
else
ifeq ($(ARC),sgi)
LIBTIFF_HOME=/opt/freeware
INCLUDES += -I$(LIBTIFF_HOME)/include 
EXELIB := -Wl,-rpath,$(LIBTIFF_HOME)/lib32 -L$(LIBTIFF_HOME)/lib32 -ltiff $(EXELIB)
else
LIBTIFF_HOME=/opt/PDlibs/tiff-v3.4beta037
INCLUDES += -I$(LIBTIFF_HOME)/include 
EXELIB := -L$(LIBTIFF_HOME)/lib -ltiff $(EXELIB)
endif
endif

endif
