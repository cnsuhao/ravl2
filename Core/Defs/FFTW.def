ifndef FFTW_DEF
FFTW_DEF=1

ifndef FFTW_HOME
  ifneq ($(filter $(ARC), sol2_7 sol2_9),)
    FFTW_HOME=/vol/vssp/dera/fft
  else
    ifeq ($(ARC), linux)
      FFTW_HOME=/vol/vssp/local/tools
    endif
  endif
endif

INCLUDES := -I$(FFTW_HOME)/include $(INCLUDES)
EXELIB := -L$(FFTW_HOME)/lib -lfftw $(EXELIB)

endif
